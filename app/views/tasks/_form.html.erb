<%= form_with model: @task, local: true do |form| %>

  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@task.errors.count, "error") %>. This task can not be saved:
      </h2>
      <ul>
        <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :summary %><br>
    <%= form.text_field :summary %>
  </p>

  <p>
    <%= form.label :text %><br>
    <%= form.text_area :text %>
  </p>

  <p>
    <%= form.label :due_date %>
    <%= form.datetime_field :due_date %>
  </p>

  <p>
    <%= form.label :important %>
    <%= form.text_field :important %>
    <mark>Can be set as: urgent, high, low, normal</mark>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>
